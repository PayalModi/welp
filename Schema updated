
create table restaurant (
	name 		varchar(20),
	ID 		char(5),
	phone 	numeric(10),
	website	varchar(30),
	cuisine	varchar(20),
	price		varchar(3),
	avg_rating	numeric(2,1),

	primary key (ID)
);

create table menu(
	rest_id		char(5),
	item_id 	char(5),
	item_name	varchar(20),

	primary key (rest_id, item_id),
	foreign key (rest_id) references restaurant
	foreign key (item_id) references item
);

create table user(
	name		varchar(20),
	user_id 	char(10),
	
	primary key (user_id)
);

create table comment(
	user_id			char(10),
	restaurant_id 		char(5),
	rating			numeric(2,1),
	comment 		varchar(100),

	primary key (user_id, restaurant_id),
	foreign key (user_id) references user,
	foreign key (restaurant_id) references restaurant
);

create table item(
	item_id 		char(5),
	ingredient_list		varchar(100),
	
	primary key (item_id)
);

create table friendship(
	user_id			char(10),
	friend_id		char(10),

	primary key (user_id, friend_id),
	foreign key (user_id) references user,
	foreign key (friend_id) references user
);
	

